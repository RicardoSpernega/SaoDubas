@model List<SaoDubas.Domain.Models.Produto>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row Lanches">
    @foreach (var item in Model)
    {

        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <h3 class="text-center"> @item.Nome</h3>
                <svg class="bd-placeholder-img card-img-top" width="60%" height="180" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail">
                    <title>Placeholder</title>
                    
                        <rect width="100%" height="100%" fill="#55595c"></rect>
                  

                </svg>
                <div class="card-body">
                    <p class="card-text">@item.Descricao</p>
                    <div class="d-flex justify-content-between align-items-center">

                    </div>
                </div>
            </div>
        </div>
    }
</div>
